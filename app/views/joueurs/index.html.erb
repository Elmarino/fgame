<h1>Liste des joueurs disponibles</h1>
<div class="tableau">
	<table>
		<tr>
			<td>Name</td>
			<td>Attack</td>
			<td>Defense</td>
			<td>Speciality</td>
			<td>Team</td>
			<% if current_user.admin? %>
				<td>What to do with ?</td>
			<% end %>
		</tr>
		<% @joueurs.each do |joueur|%>
			<tr>
				<td><%= joueur.name %> </td>
				<td><%= joueur.attack %> </td>
				<td><%= joueur.defense %> </td>
				<td><%= joueur.speciality %> </td>
				<td>
					<%= link_to "#{@decks.find(joueur.deck_id).name}", "/decks/#{joueur.deck_id}"%>
				</td>
				<% if current_user.admin? %>
					<td>
						<%= link_to 'Show', joueur%>
						<%= link_to 'Edit', edit_joueur_path(joueur)
						%>
						<%= link_to 'Delete', joueur, method: :delete, data:{
							confirm: 'Êtes-vous sûr(e) de vouloir supprimer ce joueur ?'
							}
						%>
					</td>
				<% end %>
			</tr>
		<% end %>
	</table>
</div>
<% if current_user.admin? %>

	<h1>Ajouter un joueur</h1>
	<%= render 'formjoueurs' %>
<% end %>
