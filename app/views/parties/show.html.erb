<div class="formulaire">
	<h1>Prepare your deck</h1>
	<h3>There is the players of the:&nbsp;&nbsp;<span class="bigger blue"><%=@deck_game.name%></span></h3>
	<br>
	<div class="list-deck">
		<%@joueurs_game.each do |joueur|%>
			<p class="player">-<%= joueur.name %></p>
		<%end%>
	</div>
</div>

<div class="formulaire">
<h2>Select 5 players</h2>
	<%= form_tag "/parties/play",class: 'checkbox-player', method: "post" do %>
		<div class="list-deck">
			<% @joueurs_game.each do |joueur| %>
				<label class="player">
					<%=check_box_tag 'player_ids[]', joueur.id, false, class: 'test' %>
					<%=joueur.name%>
				</label>
				<br>
			<% end %>
		</div>
		<br>
		<input type="submit" value="Play !" id="play" />
	<% end %>
</div>

